    <script>
        $(".side-menu-wrapper").hide()
        $("#menu-close-button").hide();
        $(".side-menu-wrapper .overlay").click(function () {
            $(".side-menu-wrapper").hide("slow");
            $("#menu-close-button").hide();
            $("#menu-bar").show();
        });
        $("#menu-bar").click(function () {
            $("#menu-bar").hide();
            $(".side-menu-wrapper").fadeToggle("slow", "linear");
            $("#menu-close-button").show();
        })
        $("#menu-close-button").click(function () {
            $("#menu-close-button").hide();
            $(".side-menu-wrapper").fadeToggle("slow");
            $("#menu-bar").show();
        });

