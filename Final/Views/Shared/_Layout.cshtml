    <style>
        * {
            font-family: 'Poppins',sans-serif;
        }
        body,html{
            height:100%;
            width:100%;
            margin:0;
            padding:0;
            font-family: 'Poppins',sans-serif;
        }
        .container-fluid{
            padding:0;
        }
        ul{
            list-style:none;
        }
        a{
            color:#333
        }
        a:hover{
            text-decoration:none;
            cursor:pointer;
            
        }
        

        .menu-bar {
            height: 45px;
            background-color: #e7eaed;
            width: 100%;
            display: flex;
            flex-direction: row;
            align-items: center;
            padding: 20px 20px;
            position: fixed;
            top: 0;
            z-index: 20000;
        }
        .menu-items,.menu-icons{
            height:45px;
        }
        .menu-items{
            flex-grow:5;
        }
        .menu-icons{
            display:flex;
        }
        .brand {
            font-size: 1.4rem;
            font-weight: 500;
            color: #333;

        }
        .brand a:hover{
            color:#ff401b;

        }
        .brand a:hover i{
            color:#333;
        }
        .menu-bar ul{
            display:flex;
            height:100%;
            flex-direction:row;
            padding:0;
            align-items:center;
            margin-left:10px;
        }
        .menu-bar ul li{
            padding:0.5rem 0.5rem;
            font-size:1.2rem
        }
        .foot {
            color: #333;
            background-color: #9e9e9e45;
            z-index:100;
        }
        .menu-icons i{
            font-size:1.5rem
        }
        .menu-icons ul li a i:hover{
            color:#ff401b
        }   
        .social{
            margin-top:10px;
        }
        .social div{
            width:2.5rem;
            height:2.5rem;
            display:flex;
            border-radius:2.5rem;
            justify-content:center;
            align-items:center;
            background-color:#f6f6f6;
            margin-right:9px
        }
        .social div i{
            color:#333;
        }
        .social div:hover i{
            color:#fd7e14;
        }
        .side-menu-wrapper{
            width:100%;
            position:fixed;
            top:45px;
            left:0;
            height:100%;
            z-index:1000;
            display:flex;
            margin:0;
            padding:0;                     
        }
        .side-menu {
            position: relative;
            width: 250px;
            height: 100%;
            background-color: white;
            display: flex;
            flex-direction: column;
            opacity: 1;
            z-index:1000;
            background-color: white;
            transition:ease-out .5s;
        }
        .side-menu a{
            padding:10px;
            font-size:1.1rem;
            line-height:1.3rem;
            padding:20px;
            transition: linear .6s;
        }
        .side-menu i{
            margin-right:5px;
            font-size:1.2rem;
        }
        .side-menu a:hover{
            color:#ff401b;
            border-left:4px solid #ff401b;
            box-shadow: inset 424px 0 0 0.01px #fce5e1;     

        }
        .overlay{
            background-color:#333;
            opacity:0.3;
            width:100%;
            z-index:1000;

        }
        .animate #menu-bar {
            -webkit-transform: rotate(-45deg) translate(-9px,6px);
            transform: rotate(-45deg) translate(-9px,6px);
        }
        .menu-button{
            width:2rem;
            height:2rem;
            display:flex;
            font-size:1.4rem;
            margin-right:.7rem;
            align-items:center;
            justify-content:center;
            cursor:pointer;
            transition:ease-out .3s;
        }
        .menu-button:hover{
            color:#ff401b
        }
        .dropdown1{
            position:relative;
            display:inline-block;
        }
        .dropdown-content {
            display: none;
            width:200px;
            position:absolute;
            right:0;
        }
        .dropdown-content a{
            
            padding:10px 0 10px 15px;
            line-height:1.3rem;
            transition:ease-out .5s;
        }
        .dropdown-content a i{
            font-size:1rem;
            margin-right:10px;
        }
        .dropdown-content a:hover{
            border-left:4px solid #ff401b;
            color:#ff401b;
            box-shadow:inset 200px 0 0 #fce5e1 ;
        }
        .dropdown1:hover .dropdown-content {
            display: flex;
            background-color: white;
            width: 200px;
            flex-direction: column;
            position: absolute;
            right: 5px;
            box-sizing: border-box;
            box-shadow: 0 0 25px #3333;
            border-radius: 10px;
            transition: 0.5s;
            padding-bottom: 15px;
            z-index: 2000;
        }
        .dropdown-content div {
            display: flex;
            flex-direction: column;
            padding: 10px 0 0 15px;
            border-bottom: 1px solid gainsboro;
        }
        .dropdown-content div ::before {
            content: '';
            position: absolute;
            top: -5px;
            right: 10px;
            width: 20px;
            height: 20px;
            background-color: white;
            transform: rotate(45deg);
        }
        .theme-text{
            color:#ff401b;
        }
        .theme-background {
            background-color: #ff401b
        }
        .menu-items ul li a:hover {
            color: #ff401b;
        }
        .menu-icons ul li a:hover {
            color: #ff401b;            
        }
        .body-main{
            margin-top:45px;
        }
        .pagination{
            width:100%;
            display:flex;
            justify-content:center;

        }
        .pagination li{
            width:40px;
            height:40px;
            margin-right:5px;
            display:flex;
            justify-content:center;
            align-items:center;
            border-radius:40px;
            background-color:#f6f6f6;
        }
        .pagination li:hover{
            background-color:#ff401b;  
            color:white;
        }
        .pagination li:hover a{
            color:white;
        }
        .pagination .active{
            color:white;
            background-color:#ff401b;
        }
        .tripple{
            font-size:1.3rem
        }
        
        /*--category Drop down----*/
       .cat-dropdown{
           display:none;
           position:absolute;
           max-width:1200px;
           background-color:white;
           z-index:300;
           overflow:hidden;
       }
       .dropdown2{
           position:relative
       }
       .dropdown2:hover .cat-dropdown{
           display:flex;
           border-radius:10px;
           box-shadow:0 0 25px gainsboro;
       }
       .cat-container div ul li{
           font-size:.9rem
       }
       .cat-container{
           display:flex;
           padding:19px;
           height:500px;
           overflow-y:hidden;
       }
        ::-webkit-scrollbar{
           width:5px;
           
        }
        ::-webkit-scrollbar-track {
            background: gainsboro;
            border-radius: 40px;
        }
 
        /* Handle */
        ::-webkit-scrollbar-thumb {
          background: grey;
          border-radius: 40px;
        }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
          background: #555; 
        }
       .cat-container div{
           display:flex;
           flex-direction:column;
       }
       .cat-head{
           width:100%;
           border-bottom:1px solid gainsboro;
           
       }
       .cat-div{
           width:200px;
           padding:5px;
       }
       .cat-div ul{
           margin:0;
           padding:0;
           align-items:flex-start
       }
  </style>
  
</head>
