<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Agora</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link rel="icon" href="~/Content/Images/favicon.ico">
    <script src="~/Scripts/toastr.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <style>
        body,html {
            margin:0;
            padding:0;
            height:100%;
        }
        .admin-wrapper{
            height:100%;
            display:flex;

        }
        .admin-side-wrapper{
            height:100%;
            position:fixed;
            top:0;
            left:0;
            max-width:150px;
            z-index:2000;
        }
        .side-bar{
            display:flex;
            flex-direction:column;
            background-color:#f8f9fa;
            height:100%;
            box-shadow:0 0 25px grey;
        }
        .admin-actions{
            display:flex;
            flex-direction:column;
            font-size:1.3rem;
            overflow:hidden;

        }
        .side-bar:hover .link-text{
            display:inline-block
        }
        .admin-actions a{
            display:flex;
            align-items:center;
            padding-left:10px;
            height:45px;
            transition:ease-out .5s;
        }
        .admin-actions a:hover{
            box-shadow:inset 150px 0 0 0.1px #fce5e1;            
            border-left:4px solid #ff401b;
        }
        .admin-actions a:hover i{
            color:#ff401b;
        }
        .admin-actions a:hover .link-text{
            color:#ff401b;
        }
        .admin-actions > a > i{
            width:2rem;
            display:flex;
            justify-content:center;
            margin-right:10px;
        }
        .link-text{
            margin-right:10px;
            display:none;
            width:100px;
            overflow:hidden;
        }
        
        .profile-section{
            height:45px;
            border-bottom:1px solid gainsboro;
            display:flex;
            align-items:center;
        }
        .profile-section a{
            padding-left:10px;
            font-size:1.3rem
        }        
        .admin-main-content{
            flex-grow:5;
            padding:50px;
            position:relative;
        }
        .render-body{
            padding:30px;
        }
        .admin-top-menu{
            position:fixed;
            top:0;
            height:45px;
            background-color:#f8f9fa;
            width:100%;
            z-index:1000;
            box-shadow:0 0 25px grey;
            display:flex;
            font-size:1.3rem;
            justify-content:flex-end;
            align-items:center;
            padding-right:60px;

        }
        .admin-top-menu i{
            margin-left:20px

        }
        .admin-top-menu i:hover{
            color:#ff401b
        }
        .theme-text{
            color:#ff401b;
        }
        i{
            cursor:pointer;
        }
        a:hover{
            text-decoration:none;
        }
        a{
            color:#333;
        }
        .pagination{
            width:100%;
            display:flex;
            justify-content:center;

        }
        .pagination li{
            width:40px;
            height:40px;
            margin-right:5px;
            display:flex;
            justify-content:center;
            align-items:center;
            border-radius:40px;
            background-color:#f6f6f6;
        }
        .pagination li:hover{
            background-color:#ff401b;  
            color:white;
        }
        .pagination li:hover a{
            color:white;
        }
        .pagination .active{
            background-color:#ff401b;
            color:white;
        }
        a{
            color:#333;
            text-decoration:none
        }
        a:hover{
            color:#ff401b
        }
    </style>
</head>
    <body>
        <div class="admin-wrapper">
            <div class="admin-side-wrapper shadow-lg">
                <div class="side-bar">
                    <div class="profile-section">
                        <a><i class="fab fa-autoprefixer theme-text"></i><span class="link-text">@Session["UserName"]</span></a>              
                    </div>
                    <div class="admin-actions">
                        <a href="@Url.Action("Index","Admin")"><i class="fas fa-home"></i><span class="link-text">Home</span></a>
                        <a href="@Url.Action("Index","Users")"><i class="fas fa-users"></i><span class="link-text">Users</span></a>
                        <a href="@Url.Action("Index","Items1")"><i class="fas fa-cube"></i><span class="link-text">Items</span></a>
                        <a href="@Url.Action("Index","AdminMessages")"><i class="fas fa-inbox"></i><span class="link-text">Inbox</span></a>
                        <a href="@Url.Action("Index","Categories")"><i class="fas fa-sitemap"></i><span class="link-text">Category</span></a>
                        <a href="@Url.Action("Index","Subcategories")"><i class="fas fa-code-branch"></i><span class="link-text">Sub</span></a>
                        <a href="@Url.Action("Index","Brands")"><i class="fas fa-tags"></i><span class="link-text">Brands</span></a>

                        <a href="@Url.Action("Index","Orders")"><i class="fas fa-receipt"></i><span class="link-text">Orders</span></a>
                        <a href="@Url.Action("Index","Subcategories")"><i class="fas fa-file-invoice-dollar"></i><span class="link-text">Sales</span></a>
                        <a href="@Url.Action("Index","Visits")"><i class="far fa-eye"></i><span class="link-text">Visits</span></a>
                    </div>
                </div>
            </div>
            <div class="admin-main-content">
                <div class="admin-top-menu">
                    <a href="@Url.Action("Index","Admin")">Dashboard</a>
                    <i class="fas fa-bell"></i>
                    <i class="far fa-envelope"></i>
                    <i class="fas fa-cog"></i>
                    <a href="@Url.Action("LogOut","User")"><i class="fas fa-sign-out-alt"></i></a>
                </div>
                <div class="render-body">
                    @RenderBody()
                </div>                
            </div>
        </div>  
       
    </body>
</html>

<script>

</script>