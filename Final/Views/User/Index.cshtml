@model Final.Models.User
@{
    ViewBag.Title = "Index";
}
<head>
    <title></title>
    <meta content="width=device-width" name="viewport" />
      <style>
        * {
            font-family: 'Poppins',sans-serif;
        }
        form{
            display: flex;
            align-items: center;
            justify-content:center;
            flex-direction: column;
            overflow: hidden;
            background-color: white;
            width:400px;
            border-radius:20px;
            height:500px;
            margin:auto;
            overflow:hidden;
            /*background:linear-gradient(45deg,rgba(243,100,118),rgba(238,115,58,0.3));*/
            box-shadow:0 0 25px grey;

        }
        .shape{
            background-color:red;
            width:100%;
            height:70px;
        }
        .input-field{
            background-color: #e5e5e5;
            max-width:300px;
            width:100%;
            height: 55px;
            margin:10px 0;
            border-radius: 55px;
            display: grid;
            grid-template-columns: 10% 90%;
            padding: 0 .4rem;
        }
        .input-field i{
            text-align: center;
            line-height: 55px;
        }
        .input{
            border:none;
            outline:none;
            background: none;
            font-weight: 600;
            font-size: 1.1rem;
        }
        .input:focus,.input:active{
            outline:none
        }
        .input::placeholder{
            color: #aaa;
        }
        .button{
            width:150px;
            height: 40px;
            border-radius: 55px;
            border: none;            
            background: #ff401b;
            color:white;
            font-size: 1.2rem;
            box-shadow: 0 0 25px #ff401b;
            margin-top: 20px;
            transition: .5s;
            margin-bottom: 10px;
            display:flex;
            justify-content:center;
            align-items:center
        }
        .button:hover{
            background-color: #333;
            box-shadow: 0 0 25px #333;
        }
        .social-text{
            font-size:1rem;
        }
        .social-media{
            display: flex;
            justify-content: center;
            justify-content: space-around;
            width:300px;
        }
        
        .social-icon{
            height: 46px;
            width:46px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            transition: 0.5s;
            align-items: center;
            color:#333;
        }
        
        .active-field{
            color:red;
        }
        .fb{
            background-color:#0d47a1;
            Color:white;
        }
        .fb:hover{
            background-color:white;
            Color:#0d47a1;
        }
        .ggl{
            background-color:#e31a00;
            color:white;
        }
        .ggl:hover{
            background-color:white;
            color:#e31a00;
        }
        .twt{
            background-color:#079cf2;
            color:white;
        }
        .twt:hover{
            background-color:white;
            color:#079cf2;
        }
        .lnk{
            background-color:#012e47;
            color:white;
        }
        .lnk:hover{
            background-color:white;
            color:#012e47;
        }
        #login-form{
            margin-top:60px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Authorize", "User",FormMethod.Post, new { autocomplete = "off",@id="login-form"}))
    {
        <form action="" class="sign-in-form shadow-lg">
            
            <h2 class="text-center theme-text">Welcome</h2>
            <div class="input-field">
                <i class="fa fa-user"></i>
                @Html.TextBoxFor(model=>model.UserName,new { @class="input",placeholder="Username",id="username"})
            </div>
            <div class="input-field">
                <i class="fa fa-lock"></i>
                @Html.TextBoxFor(model => model.Password, new { @class = "input",placeholder="Password",type="password" })
            </div>
            <input type="submit" class="button" />
            <a class="social-text mb-2" href="@Url.Action("Register","User")">Don't have an account yet? Signup here.</a>
            <div class="social-media">
                <a href="" class="social-icon fb">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="" class="social-icon ggl">
                    <i class="fab fa-google"></i>
                </a>
                <a href="" class="social-icon twt">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="" class="social-icon lnk">
                    <i class="fab fa-linkedin"></i>
                </a>
            </div>
        </form>

    }
</body>
<script>

    $(document).ready(function () {

        $("input").focus(function () {

            $(this).parent(".input-field").children("i").css("color", "red");
            
        });
        $("input").blur(function () {

            $(this).parent(".input-field").children("i").css("color", "#333");
            

        });

        $("form").submit(function (e) {
            var u = $("#username").val()
            var p = $("#password").val() 
            if (u == '' || p == '') {
                e.preventDefault()
                toastr.warning("Please fill all the required fields!!")
            }
        })
    })
    
</script>
